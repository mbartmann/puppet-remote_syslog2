[Unit]
Description=remote_syslog2
Documentation=https://github.com/papertrail/remote_syslog2
After=network-online.target

[Service]
ExecStartPre=/usr/bin/test -e <%= @config_file %>
ExecStart=<%= @install_dir -%>/remote_syslog/remote_syslog -D -c <%= @config_file %>
Restart=always
User=root
Group=root

[Install]
WantedBy=multi-user.target